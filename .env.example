# API URL for development
VITE_API_URL=http://localhost:3001/api

# Server configuration
NODE_ENV=production                # Environment: development, production, or test
PORT=3000                         # Port number for the server

# Data Storage Paths
DATA_DIR=/app/data               # Directory for application data
LOG_DIR=/app/logs               # Directory for log files
BACKUP_DIR=/app/backups         # Directory for backup files

# Security Settings
ENCRYPTION_KEY_FILE=.encryption_key  # Name of the encryption key file
MAX_REQUEST_SIZE=100kb              # Maximum request payload size
RATE_LIMIT_WINDOW=900000           # Rate limiting window in milliseconds (15 minutes)
RATE_LIMIT_MAX=100                 # Maximum requests per window

# Logging Configuration
LOG_LEVEL=info                     # Logging level: error, warn, info, debug
LOG_FORMAT=json                    # Log format: json or text
LOG_ROTATION_SIZE=10M             # Size threshold for log rotation
LOG_RETENTION_DAYS=30             # Number of days to retain logs

# Database Backup Settings
DB_BACKUP_ENABLED=true            # Enable automated database backups
DB_BACKUP_INTERVAL=86400         # Backup interval in seconds (24 hours)
DB_BACKUP_RETENTION=7            # Number of days to retain backups

# Add any other environment variables here 